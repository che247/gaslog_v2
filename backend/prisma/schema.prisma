generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model fuel_log {
  id               Int      @id(map: "fuel_logs_pkey") @default(autoincrement())
  date             DateTime @db.Date
  odometer         Decimal  @db.Decimal(5, 2)
  total_cost       Decimal  @db.Decimal(5, 2)
  gallons          Decimal  @db.Decimal(6, 3)
  gas_station      String
  price_per_gallon Decimal? @db.Decimal(4, 2)
  notes            String?
}
